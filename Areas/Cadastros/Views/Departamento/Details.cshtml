@model Modelo.Cadastros.Departamento

@{
    Layout = "_LayoutIES";
}

@section Styles	{
    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/fontawesome.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
    </environment>
}

<div class="card-block">
    <div class="card-header text-white bg-secondary	text-center	h1">
        Exibindo um departamento existente
    </div>
    @{ await Html.RenderPartialAsync("~/Areas/Cadastros/Views/Departamento/_PartialDetailsContentCard.cshtml", Model);}
    <div class="card-footer	bg-info	text-center	text-white">
        <a asp-action="Edit" class="btn	btn-warning" asp-route-id="@Model.DepartamentoID">Alterar</a>
        <a asp-action="Index" class="btn btn-warning">
            Retornar a listagem de departamentos.
        </a>
    </div>
</div>